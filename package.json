{
  "name": "tsukiizukii-sites",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "dev:web": "pnpm --filter @tsukiizukii/web dev",
    "dev:blog": "pnpm --filter @tsukiizukii/blog dev",
    "dev:registry": "pnpm --filter @tsukiizukii/registry dev",
    "dev:contact": "pnpm --filter @tsukiizukii/contact dev",
    "build:web": "pnpm --filter @tsukiizukii/web build",
    "build:blog": "pnpm --filter @tsukiizukii/blog build",
    "build:registry": "pnpm --filter @tsukiizukii/registry build",
    "build:contact": "pnpm --filter @tsukiizukii/contact build"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/utils/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.3",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10"
  }
}
