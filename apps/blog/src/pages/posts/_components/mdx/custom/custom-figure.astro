---
const { class: className, ...rest } = Astro.props;

const activeRehypePrettyCode: boolean = Object.hasOwn(
  rest,
  "data-rehype-pretty-code-figure",
);
---

{
  activeRehypePrettyCode ? (
    <figure
      {...rest}
      class:list={[
        "rounded-lg relative bg-gray-950 p-1 text-sm scheme-dark dark:inset-ring dark:inset-ring-white/5",
        className,
      ]}
    >
      <slot />
    </figure>
  ) : (
    <figure {...rest} class={className}>
      <slot />
    </figure>
  )
}
