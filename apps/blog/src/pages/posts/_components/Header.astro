---
import TableOfContents from "@/pages/posts/_components/mdx/original/table-of-contents";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

const { title, createdAt, updatedAt, heroImage, headings } = Astro.props;
---

<header>
  <div class="hero-image">
    {
      heroImage && (
        <Image width={1020} height={510} src={heroImage} alt="article image" />
      )
    }
  </div>
  <div class="title">
    <div class="date">
      <FormattedDate date={createdAt} />
      {
        updatedAt && (
          <div class="last-updated-on">
            Last updated on <FormattedDate date={updatedAt} />
          </div>
        )
      }
    </div>
    <h2>{title}</h2>
    <hr />
  </div>
  <TableOfContents headings={headings} />
</header>
