---
import BlogPostLayout from "@/layouts/BlogPost.astro";
import { BaselineStatus, Tweet, YouTube } from "astro-embed";
import { type CollectionEntry, getCollection, render } from "astro:content";
import * as Custom from "./_components/mdx/custom/index.ts";
import Baseline from "./_components/mdx/original/Baseline.astro";
import Callout from "./_components/mdx/original/callout.tsx";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content, headings } = await render(post);
---

<BlogPostLayout {...post.data} headings={headings}>
  <Content
    components={{
      pre: Custom.Pre,
      a: Custom.A,
      // figcaption: Custom.Figcaption,
      // figure: Custom.Figure,
      div: Custom.Div,
      Baseline,
      BaselineStatus,
      Callout,
      Tweet,
      YouTube,
    }}
  />
</BlogPostLayout>
